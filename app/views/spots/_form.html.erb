  <div class="form-group">
  <%= f.label :time_limit, class: "col-sm-2 control-label" %>
    <div class="col-sm-10" id="locationField">
      <%= f.select :time_limit, options_for_select([['Unlimited'], ['30 Minutes'],['1 Hour'], ['2 Hours'], ['3 Hours'], ['4 Hours'],['Other']]) %>
      <%= f.text_field :time_limit, "data-depends-on" => "#spot_time_limit", "data-depends-on-value" => "Other" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "button" %>
    </div>
  </div>

<% end %>

