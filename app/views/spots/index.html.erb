<script src="//maps.google.com/maps/api/js?key=AIzaSyAd5nFl1q5g909CfNQ6y3PXy5VPJsNOxr4"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<div class="page-header">
  <h1>Listing spots</h1>
</div>

<div class="table-responsive">
  <table class="hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Address</th>
            <th>Time limit</th>
            <th>Description</th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @spots) do |spot| %>
            <td><%= link_to spot.title, spot %></td>
            <td><%= spot.address %></td>
            <td><%= spot.time_limit %></td>
            <td><%= spot.description %></td>
        <td><div class="button alert"> <%= link_to 'x', spot, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      <% end %>
    </tbody>
  </table>
</div>


<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>

<%= link_to new_spot_path, class: 'button center' do %>
  <span class="glyphicon glyphicon-plus"></span>
  New Spot
<% end %>
