<script src="//maps.google.com/maps/api/js?key=AIzaSyAd5nFl1q5g909CfNQ6y3PXy5VPJsNOxr4"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<div class="text-center">
  <h1>Your Spots</h1>
</div>

<div class="row">
    <div class="small-2 large-4 columns">
      <%= link_to new_spot_path, class: 'expanded button' do %>
        <span class="glyphicon glyphicon-plus"></span>
        Add a New Spot
      <% end %>
      <table class="hover">
        <tbody>
          <%= content_tag_for(:tr, @spots) do |spot| %>
                <td><%= link_to spot.title, spot %></td>
                <!-- <td><%= spot.address %></td> -->
                <td><%= spot.time_limit %></td>
                <td><%= spot.description %></td>
            <td><div class="button alert"><%= link_to 'x', spot, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
          <% end %>
        </tbody>
      </table>
    </div>


    <div class="columns flex-video">
      <div id="map" style='max-width: 800px; height: 600px;'></div>

      <script type="text/javascript">
        handler = Gmaps.build('Google');
        handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
          markers = handler.addMarkers(<%=raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
      </script>
    </div>

  </div>
